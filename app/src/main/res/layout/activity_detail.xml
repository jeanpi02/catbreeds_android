<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <!-- Imagen fija en la parte superior (mitad de la pantalla) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar en la parte superior -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:title="Nombre Raza"
            app:titleTextColor="@color/black"
            android:elevation="4dp" />

        <!-- Imagen fija -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/iv_cat_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/light_gray" />

        </FrameLayout>

        <!-- Contenido scrolleable en la parte inferior -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Descripción -->
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breed description goes here..."
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="24dp" />

                <!-- Información detallada -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- País de origen -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📍"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_origin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Country: Egypt"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Inteligencia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🧠"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_intelligence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Intelligence: 5/5"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Adaptabilidad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🏠"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_adaptability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Adaptability: 5/5"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Nivel de energía -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⚡"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_energy_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Energy Level: 5/5"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Esperanza de vida -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏱️"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_life_span"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Life Span: 14-15 years"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- Temperamento -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="😸"
                            android:textSize="18sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_temperament"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Temperament: Active, Energetic, Independent"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 